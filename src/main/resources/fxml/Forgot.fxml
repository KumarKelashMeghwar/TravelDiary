<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="451.0" prefWidth="637.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.traveldiary.controllers.ForgotController">
   <HBox alignment="CENTER" prefHeight="73.0" prefWidth="637.0">
      <Label alignment="CENTER" prefHeight="55.0" prefWidth="175.0" text="Travel Diary">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
      </Label>
   </HBox>
   <TextField fx:id="username" focusTraversable="false" layoutX="133.0" layoutY="114.0" prefHeight="47.0"
              prefWidth="372.0" promptText="Enter your username"/>
   <Button layoutX="355.0" layoutY="198.0" mnemonicParsing="false" onMouseClicked="#recoverNowClicked" prefHeight="34.0"
           prefWidth="149.0" text="Recover Now">
      <font>
         <Font size="13.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Button layoutX="133.0" layoutY="349.0" mnemonicParsing="false" onMouseClicked="#backBtnClicked" prefHeight="28.0"
           prefWidth="95.0" text="Back"/>
</AnchorPane>
